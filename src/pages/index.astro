---
import Layout from '../layouts/Layout.astro';
import StepByStep from '../components/StepByStep.astro';
---

<Layout title="Eco Net">
  <header class="banner">
    <div class="banner-content">
      <div class="text-content">
        <h1>Eco Net</h1>
        <p>Venimos a transformar el mundo, reciclando por un futuro mejor.</p>
      </div>
      <div class="image-content">
        <img src="/logo.png" alt="Imagen de reciclaje" />
      </div>
    </div>
  </header>

  <StepByStep />

  <style>
    .banner {
      background-color: #eaf5ea;
      background-size: cover;
      background-position: center;
      padding: 2rem;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #2b5938;
      font-family: Arial, sans-serif;
    }

    .banner-content {
      max-width: 1200px;
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 1rem;
    }

    .text-content h1 {
      font-size: 3.7rem;
      margin: 0;
    }

    .text-content p {
      font-size: 1.6rem;
      margin-top: 0.5rem;
      max-width: 400px;
    }

    .image-content img {
      max-width: 100%;
      height: 250px;
      border-radius: 8px;
    }

    /* Responsividad */
    @media (max-width: 768px) {
      .banner-content {
        flex-direction: column;
        text-align: center;
      }
      .text-content h1 {
        font-size: 2rem;
      }
      .text-content p {
        font-size: 1rem;
      }
      .image-content img {
        max-width: 100%;
        margin-top: 1rem;
      }
    }
  </style>
</Layout>
